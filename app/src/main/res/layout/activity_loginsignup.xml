<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginsignupActivity"
    android:background="@color/white">

    <!--design for sign up page-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:id="@+id/cl_signup"
        android:visibility="visible">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_50sdp"
            android:text="Complain"
            android:textColor="@color/black"
            android:textSize="@dimen/_50ssp"
            android:fontFamily="@font/grand_hotel"
            android:id="@+id/complain"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            app:layout_constraintTop_toBottomOf="@+id/complain"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_35sdp"
            android:hint="Name"
            android:textColorHint="@color/hint_grey"
            app:boxStrokeWidthFocused="0dp"
            app:boxStrokeWidth="0dp"
            android:id="@+id/til_username">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/textinputedittext_corner"
                android:backgroundTint="#E0F6FF"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:paddingStart="@dimen/_20sdp"
                android:id="@+id/tiet_username" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            app:layout_constraintTop_toBottomOf="@+id/til_username"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_35sdp"
            android:hint="Mobile No"
            android:textColorHint="@color/hint_grey"
            app:boxStrokeWidthFocused="0dp"
            app:boxStrokeWidth="0dp"
            android:id="@+id/til_mobileno">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/textinputedittext_corner"
                android:backgroundTint="#E0F6FF"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:paddingStart="@dimen/_20sdp"
                android:id="@+id/tiet_mobileno" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            app:layout_constraintTop_toBottomOf="@+id/til_mobileno"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_35sdp"
            android:hint="Password"
            app:endIconTint="@color/hint_grey"
            android:textColorHint="@color/hint_grey"
            app:endIconMode="password_toggle"
            app:boxStrokeWidthFocused="0dp"
            app:boxStrokeWidth="0dp"
            android:id="@+id/til_password">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/textinputedittext_corner"
                android:backgroundTint="#E0F6FF"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:paddingStart="@dimen/_20sdp"
                android:id="@+id/tiet_password" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            app:layout_constraintTop_toBottomOf="@+id/til_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_35sdp"
            android:visibility="invisible"
            android:hint="Enter OTP"
            android:textColorHint="@color/hint_grey"
            app:boxStrokeWidthFocused="0dp"
            app:boxStrokeWidth="0dp"
            android:id="@+id/til_otp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/textinputedittext_corner"
                android:backgroundTint="#E0F6FF"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:paddingStart="@dimen/_20sdp"
                android:id="@+id/tiet_otp" />


        </com.google.android.material.textfield.TextInputLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            app:layout_constraintTop_toBottomOf="@+id/til_otp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_12sdp"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardBackgroundColor="@color/blue"
            android:id="@+id/cv_signup">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sign Up"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:layout_gravity="center"
                android:id="@+id/signup"/>


        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="@dimen/_105sdp"
            android:layout_height="@dimen/_1sdp"
            app:layout_constraintTop_toBottomOf="@+id/cv_signup"
            app:layout_constraintStart_toStartOf="@+id/cv_signup"
            android:background="@color/black"
            android:layout_marginTop="@dimen/_18sdp"
            android:id="@+id/startview"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/cv_signup"
            app:layout_constraintStart_toStartOf="@id/cv_signup"
            app:layout_constraintEnd_toEndOf="@id/cv_signup"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="OR"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:id="@+id/or"/>

        <View
            android:layout_width="@dimen/_105sdp"
            android:layout_height="@dimen/_1sdp"
            app:layout_constraintTop_toBottomOf="@+id/cv_signup"
            app:layout_constraintEnd_toEndOf="@+id/cv_signup"
            android:layout_marginTop="@dimen/_18sdp"
            android:background="@color/black"
            android:id="@+id/endview"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/startview"
            app:layout_constraintStart_toStartOf="@+id/startview"
            android:layout_marginTop="@dimen/_14sdp"
            android:text="Already Have An Account?"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/endview"
            app:layout_constraintEnd_toEndOf="@+id/endview"
            android:layout_marginTop="@dimen/_14sdp"
            android:text="Log In"
            android:textColor="@color/blue"
            android:textSize="@dimen/_12sdp"
            android:id="@+id/login"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!--design for login page-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:id="@+id/cl_login"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/_100sdp"
            android:text="Complain"
            android:textColor="@color/black"
            android:textSize="@dimen/_50ssp"
            android:fontFamily="@font/grand_hotel"
            android:id="@+id/complain1"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            app:layout_constraintTop_toBottomOf="@+id/complain1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_25sdp"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_35sdp"
            android:hint="Name"
            android:textColorHint="@color/hint_grey"
            app:boxStrokeWidthFocused="0dp"
            app:boxStrokeWidth="0dp"
            android:id="@+id/til_username1">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/textinputedittext_corner"
                android:backgroundTint="#E0F6FF"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:paddingStart="@dimen/_20sdp"
                android:id="@+id/tiet_username1" />


        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            app:layout_constraintTop_toBottomOf="@+id/til_username1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_35sdp"
            android:hint="Password"
            app:endIconTint="@color/hint_grey"
            android:textColorHint="@color/hint_grey"
            app:endIconMode="password_toggle"
            app:boxStrokeWidthFocused="0dp"
            app:boxStrokeWidth="0dp"
            android:id="@+id/til_password1">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                android:background="@drawable/textinputedittext_corner"
                android:backgroundTint="#E0F6FF"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:paddingStart="@dimen/_20sdp"
                android:id="@+id/tiet_password1" />


        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/til_password1"
            app:layout_constraintEnd_toEndOf="@+id/til_password1"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="Forget Password"
            android:textColor="@color/blue"
            android:textSize="@dimen/_12sdp"
            android:id="@+id/forgetpassword"/>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_40sdp"
            app:layout_constraintTop_toBottomOf="@+id/forgetpassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginStart="@dimen/_35sdp"
            android:layout_marginEnd="@dimen/_35sdp"
            android:layout_marginTop="@dimen/_12sdp"
            app:cardCornerRadius="@dimen/_20sdp"
            app:cardBackgroundColor="@color/blue"
            android:id="@+id/cv_login">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log In"
                android:textColor="@color/white"
                android:textSize="@dimen/_15sdp"
                android:layout_gravity="center"
                android:id="@+id/login1"/>


        </androidx.cardview.widget.CardView>

        <View
            android:layout_width="@dimen/_105sdp"
            android:layout_height="@dimen/_1sdp"
            app:layout_constraintTop_toBottomOf="@+id/cv_login"
            app:layout_constraintStart_toStartOf="@+id/cv_login"
            android:background="@color/black"
            android:layout_marginTop="@dimen/_18sdp"
            android:id="@+id/startview1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/cv_login"
            app:layout_constraintStart_toStartOf="@id/cv_login"
            app:layout_constraintEnd_toEndOf="@id/cv_login"
            android:layout_marginTop="@dimen/_12sdp"
            android:text="OR"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/black"
            android:id="@+id/or1"/>

        <View
            android:layout_width="@dimen/_105sdp"
            android:layout_height="@dimen/_1sdp"
            app:layout_constraintTop_toBottomOf="@+id/cv_login"
            app:layout_constraintEnd_toEndOf="@+id/cv_login"
            android:layout_marginTop="@dimen/_18sdp"
            android:background="@color/black"
            android:id="@+id/endview1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/startview1"
            app:layout_constraintStart_toStartOf="@+id/startview1"
            android:layout_marginTop="@dimen/_14sdp"
            android:text="Don't Have An Account?"
            android:textColor="@color/black"
            android:textSize="@dimen/_12sdp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/endview1"
            app:layout_constraintEnd_toEndOf="@+id/endview1"
            android:layout_marginTop="@dimen/_14sdp"
            android:text="Sign Up"
            android:textColor="@color/blue"
            android:textSize="@dimen/_12sdp"
            android:id="@+id/signup1"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
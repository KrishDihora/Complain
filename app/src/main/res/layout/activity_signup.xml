<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Views.Activitys.signupActivity"
    android:background="@color/white"
    android:id="@+id/clmain">

    <!--design for sign up page-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical"
        android:background="@color/white">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:id="@+id/cl_signup"
            android:visibility="visible">


            <TextView
                android:id="@+id/complain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/denk_one"
                android:text="Complain"
                android:textColor="@color/black"
                android:textSize="@dimen/_35ssp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                app:layout_constraintTop_toBottomOf="@+id/complain"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_35sdp"
                android:hint="Name"
                android:textColorHint="@color/hint_grey"
                app:boxStrokeWidthFocused="0dp"
                app:boxStrokeWidth="0dp"
                android:id="@+id/til_name">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/textinputedittext_corner"
                    android:backgroundTint="#E0F6FF"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:paddingStart="@dimen/_20sdp"
                    android:id="@+id/tiet_name" />


            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                app:layout_constraintTop_toBottomOf="@+id/til_name"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_35sdp"
                android:hint="Mobile No"
                android:textColorHint="@color/hint_grey"
                app:boxStrokeWidthFocused="0dp"
                app:boxStrokeWidth="0dp"
                android:id="@+id/til_mobileno">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/textinputedittext_corner"
                    android:backgroundTint="#E0F6FF"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:paddingStart="@dimen/_20sdp"
                    android:id="@+id/tiet_mobileno"
                    android:inputType="phone"
                    android:maxLength="10"/>


            </com.google.android.material.textfield.TextInputLayout>

            <!--<com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                app:layout_constraintTop_toBottomOf="@+id/til_mobileno"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_35sdp"
                android:hint="Password"
                app:endIconTint="@color/hint_grey"
                android:textColorHint="@color/hint_grey"
                app:endIconMode="password_toggle"
                android:autofillHints="password"
                app:boxStrokeWidthFocused="0dp"
                app:boxStrokeWidth="0dp"
                android:id="@+id/til_password">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/textinputedittext_corner"
                    android:backgroundTint="#E0F6FF"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:paddingStart="@dimen/_20sdp"
                    android:id="@+id/tiet_password"/>


            </com.google.android.material.textfield.TextInputLayout>-->

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_45sdp"
                app:layout_constraintTop_toBottomOf="@+id/til_mobileno"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_35sdp"
                android:hint="Password"
                android:textColorHint="@color/hint_grey"
                app:boxStrokeWidthFocused="0dp"
                app:boxStrokeWidth="0dp"
                android:visibility="visible"
                android:id="@+id/til_otp">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:background="@drawable/textinputedittext_corner"
                    android:backgroundTint="#E0F6FF"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    android:paddingStart="@dimen/_20sdp"
                    android:id="@+id/tiet_otp"
                    android:inputType="number"
                    android:maxLength="6"/>


            </com.google.android.material.textfield.TextInputLayout>


            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"
                app:layout_constraintTop_toBottomOf="@+id/til_otp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="@dimen/_35sdp"
                android:layout_marginEnd="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_15sdp"
                app:cardCornerRadius="@dimen/_20sdp"
                app:cardBackgroundColor="@color/blue"
                android:id="@+id/cv_signup">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign Up"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_15sdp"
                    android:layout_gravity="center"
                    android:id="@+id/signup"/>


            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="@dimen/_105sdp"
                android:layout_height="@dimen/_1sdp"
                app:layout_constraintTop_toBottomOf="@+id/cv_signup"
                app:layout_constraintStart_toStartOf="@+id/cv_signup"
                android:background="@color/black"
                android:layout_marginTop="@dimen/_18sdp"
                android:id="@+id/startview"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/cv_signup"
                app:layout_constraintStart_toStartOf="@id/cv_signup"
                app:layout_constraintEnd_toEndOf="@id/cv_signup"
                android:layout_marginTop="@dimen/_12sdp"
                android:text="OR"
                android:textSize="@dimen/_12sdp"
                android:textColor="@color/black"
                android:id="@+id/or"/>

            <View
                android:layout_width="@dimen/_105sdp"
                android:layout_height="@dimen/_1sdp"
                app:layout_constraintTop_toBottomOf="@+id/cv_signup"
                app:layout_constraintEnd_toEndOf="@+id/cv_signup"
                android:layout_marginTop="@dimen/_18sdp"
                android:background="@color/black"
                android:id="@+id/endview"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/startview"
                app:layout_constraintStart_toStartOf="@+id/startview"
                android:layout_marginTop="@dimen/_14sdp"
                android:text="Already Have An Account?"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/endview"
                app:layout_constraintEnd_toEndOf="@+id/endview"
                android:layout_marginTop="@dimen/_14sdp"
                android:text="Sign In"
                android:textColor="@color/blue"
                android:textSize="@dimen/_12sdp"
                android:id="@+id/signin"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>




    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:visibility="gone"
        android:id="@+id/progress"/>


</androidx.constraintlayout.widget.ConstraintLayout>